<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_premium_Class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="15dp"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_premVid"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                tools:src="@drawable/default_image"
                android:layout_margin="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/tv_Course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="UI/UX Design"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/orange"
                app:layout_constraintTop_toBottomOf="@id/iv_premVid"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toStartOf="@id/tv_judul"/>
            <ImageView
                android:id="@+id/iv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_rating"
                app:layout_constraintTop_toBottomOf="@id/iv_premVid"
                app:layout_constraintEnd_toStartOf="@id/tv_rate"/>
            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.7"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_rating"
                app:layout_constraintBottom_toBottomOf="@id/iv_rating"/>
            <TextView
                android:id="@+id/tv_judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Belajar Web Designer dengan Figma"
                android:fontFamily="@font/poppins_bold"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tv_Course"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv_creator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="by Angela Doe"
                android:textSize="10sp"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_judul"/>
            <ImageView
                android:id="@+id/iv_premLvlCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tingkat_kesulitan"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_creator"/>
            <TextView
                android:id="@+id/tv_premLvlCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="Intermediate Level"
                android:textSize="10sp"
                android:textColor="@color/orange"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toTopOf="@id/iv_premLvlCourse"
                app:layout_constraintBottom_toBottomOf="@id/iv_premLvlCourse"
                app:layout_constraintStart_toEndOf="@id/iv_premLvlCourse"
                app:layout_constraintTop_toBottomOf="@id/tv_creator"/>
            <ImageView
                android:id="@+id/iv_modul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/modul"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="100dp"
                app:layout_constraintEnd_toStartOf="@id/tv_premModuls"
                app:layout_constraintTop_toBottomOf="@id/tv_creator"/>
            <TextView
                android:id="@+id/tv_premModuls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Modul"
                android:textSize="10sp"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintStart_toEndOf="@id/tv_premLvlCourse"
                app:layout_constraintTop_toBottomOf="@id/tv_creator"
                app:layout_constraintTop_toTopOf="@id/iv_modul"
                app:layout_constraintBottom_toBottomOf="@id/iv_modul"
                app:layout_constraintEnd_toStartOf="@id/tv_premDurasi"/>
            <ImageView
                android:id="@+id/iv_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/time_course"
                android:layout_marginEnd="3dp"
                app:layout_constraintEnd_toStartOf="@id/tv_premDurasi"
                app:layout_constraintTop_toBottomOf="@id/tv_creator"/>
            <TextView
                android:id="@+id/tv_premDurasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="45 Menit"
                android:textSize="10sp"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toTopOf="@id/iv_timer"
                app:layout_constraintBottom_toBottomOf="@id/iv_timer"
                app:layout_constraintTop_toBottomOf="@id/tv_creator"
                app:layout_constraintEnd_toEndOf="parent"/>
            <Button
                android:id="@+id/btn_mulai_kelas"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_margin="10dp"
                android:text="Premium"
                android:drawableLeft="@drawable/diamond"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15sp"
                android:backgroundTint="@color/orange"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_premLvlCourse"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>