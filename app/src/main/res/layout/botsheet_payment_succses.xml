<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:background="@color/white"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/close_botsheet_payment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/tv_payment_succes_botshet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat!"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/close_botsheet_payment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_payment_botshet"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/default_image"
            app:layout_constraintTop_toBottomOf="@id/tv_payment_succes_botshet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_transaksi_botshet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaksi pembayaran kelas premium berhasil!"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/iv_payment_botshet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tv_EReceipt_botshet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-receipt telah dikirim ke email."
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_transaksi_botshet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_to_class_botshet"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Mulai Belajar"
            app:cornerRadius="15dp"
            android:backgroundTint="@drawable/button_selector"
            app:layout_constraintTop_toBottomOf="@id/tv_EReceipt_botshet"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_to_homepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kembali ke Home"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/orange"
            app:layout_constraintTop_toBottomOf="@id/btn_to_class_botshet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>