<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:background="@color/white"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/close_botsheet_mulaibelajar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/tv1_mulai_belajar_botshet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OnBoarding..."
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/close_botsheet_mulaibelajar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_mulai_belajar_botshet"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/default_image"
            app:layout_constraintTop_toBottomOf="@id/tv1_mulai_belajar_botshet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv2_mulai_belajar_botshet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Persiapkan hal berikut untuk belajar yang maksimal"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/iv_mulai_belajar_botshet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tv3_mulai_belajar_botshet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/botsheet_belajar_text"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv2_mulai_belajar_botshet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_to_class_botshet"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Mulai Belajar"
            app:cornerRadius="15dp"
            android:backgroundTint="@color/navyblue"
            app:layout_constraintTop_toBottomOf="@id/tv3_mulai_belajar_botshet"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>