<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:background="@color/donker"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/close_botsheet_regis"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/tv_regis_succses_botshet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrasi\n Berhasil!"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/close_botsheet_regis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        
        <ImageView
            android:id="@+id/iv_check_botshet"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_check"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_regis_succses_botshet"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_to_home_botshet"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Home"
            app:cornerRadius="15dp"
            android:backgroundTint="@color/navyblue"
            app:layout_constraintTop_toBottomOf="@id/iv_check_botshet"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="80dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>