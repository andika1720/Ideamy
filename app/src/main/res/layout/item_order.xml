<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_freeClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="15dp"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_freeVid"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/default_image"
                android:layout_margin="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/tv_Course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="UI/UX Design"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/orange"
                app:layout_constraintTop_toBottomOf="@id/iv_freeVid"
                app:layout_constraintStart_toStartOf="parent" />
            <ImageView
                android:id="@+id/iv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_rating"
                app:layout_constraintTop_toBottomOf="@id/iv_freeVid"
                app:layout_constraintEnd_toStartOf="@id/tv_rate"/>
            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.0"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_2"
                app:layout_constraintBottom_toBottomOf="@id/iv_2"/>
            <TextView
                android:id="@+id/tv_judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textColor="@color/black"
                android:text="Intro to Basic of User Interaction Design"
                android:fontFamily="@font/poppins_bold"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tv_Course"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:id="@+id/iv_freeLvlCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tingkat_kesulitan"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_judul"/>
            <TextView
                android:id="@+id/tv_freeLvlCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="Beginner Level"
                android:textSize="10sp"
                android:textColor="@color/orange"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toTopOf="@id/iv_freeLvlCourse"
                app:layout_constraintBottom_toBottomOf="@id/iv_freeLvlCourse"
                app:layout_constraintStart_toEndOf="@id/iv_freeLvlCourse"
                app:layout_constraintTop_toBottomOf="@id/tv_judul"/>
            <Button
                android:id="@+id/btn_mulai_kelas"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="10dp"
                android:text="Mulai Kelas"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15sp"
                android:backgroundTint="@color/orange"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_freeLvlCourse"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>