<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.itemPage.homepage.ItemSemuaKelas">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHomeAllCategory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/pgbar_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/rvHomeAllCategory"
        app:layout_constraintStart_toStartOf="@id/rvHomeAllCategory"
        app:layout_constraintEnd_toEndOf="@id/rvHomeAllCategory"
        app:layout_constraintBottom_toBottomOf="@id/rvHomeAllCategory"/>


</androidx.constraintlayout.widget.ConstraintLayout>